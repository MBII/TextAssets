			style				WINDOW_STYLE_SHADER
			rect				0 0 0 0
			background			"gfx/menus/alpha/Button_Highlight"
			forecolor			1 1 1 0.8
			visible				0
			decoration
		}

		// Team Description Display
		itemDef
		{
			name				teamDescription
			group				customizeMap
			style				WINDOW_STYLE_FILLED
			rect				125 365 260 50
			text				""
