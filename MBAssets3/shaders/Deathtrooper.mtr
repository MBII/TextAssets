models/players/deathtrooper/head
{
	q3map_nolightmap
	{
		map models/players/deathtrooper/head_A
		rmoMap models/players/deathtrooper/head_RMO
		normalMap models/players/deathtrooper/head_N
		rgbGen lightingDiffuse
	}
	{
		map models/players/deathtrooper/head_glow
		blendFunc GL_ONE GL_ONE
		detail
		glow
	}
}

