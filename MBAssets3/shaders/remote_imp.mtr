models/players/remote_imp/remote_imp
{
    {
        map models/players/remote_imp/remote_imp_a
		rmomap models/players/remote_imp/remote_imp_rmo
		normalHeightMap models/players/remote_imp/remote_imp_nh
        blendFunc GL_ONE GL_ZERO
        rgbGen lightingDiffuse
		parallaxDepth 0 parallaxBias 0.5
    }
    {
        map models/players/remote_imp/remote_imp_glow
        blendFunc GL_ONE GL_ONE
        glow
        rgbGen wave square 1 1 0 0.75
    }
}